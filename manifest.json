{
  "manifest_version": 3,
  "name": "Bot Lici FirmaVB",
  "version": "1.0",
  "description": "Automatizaci√≥n de postulaciones en lici.cl con blacklist y ajuste de precios al 95%",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://lici.cl/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://lici.cl/*"],
      "js": ["config.js", "blacklist.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
