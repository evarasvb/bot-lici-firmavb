{
  "manifest_version": 3,
  "name": "Bot Lici FirmaVB",
  "version": "1.0.0",
  "description": "Automatiza procesamiento de ofertas en lici.cl con prompt completo",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://lici.cl/*",
    "https://*.lici.cl/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://lici.cl/*", "https://*.lici.cl/*"],
      "js": ["config.js", "blacklist.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bot Lici FirmaVB"
  },
  "icons": {
    "16": "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='75' font-size='75'>ðŸ¤–</text></svg>",
    "48": "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='75' font-size='75'>ðŸ¤–</text></svg>",
    "128": "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='75' font-size='75'>ðŸ¤–</text></svg>"
  }
}

